<!DOCTYPE html>
<html>

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container bg-secondary" style="height: 100vh;">

    <div class="h-100 container d-flex justify-content-center align-items-center">
        <div class="w-50 p-5 pt-4 bg-primary-subtle" style="height: 33em; border-radius: 10px;">
            <div class="mb-2 d-flex justify-content-between align-items-center">
                <h3 class="mb-0">Form Tambah Data</h3>
                <a href="/about" style="text-decoration: none; color:black"><i class="bi bi-x-lg" style="cursor: pointer;"></i></a>
            </div>
            <form action="/create" method="post" class="h-100 d-flex flex-column">
                <div class="mb-3">
                    <label for="nama-depan" class="form-label fw-semibold">Nama Depan</label>
                    <input type="text" name="namaDepan" class="form-control" id="nama-depan"
                        placeholder="Masukkan Nama Depan" required>
                </div>
                <div class="mb-3">
                    <label for="nama-belakang" class="form-label fw-semibold">Nama Belakang</label>
                    <input type="text" name="namaBelakang" class="form-control" id="nama-belakang"
                        placeholder="Masukkan Email" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label fw-semibold">Alamat Email</label>
                    <input type="email" name="email" class="form-control" id="email" placeholder="Masukkan Email">
                </div>
                <div class="mb-3">
                    <label for="saldo" class="form-label fw-semibold">Saldo</label>
                    <input type="text" name="saldo" class="form-control" id="saldo" placeholder="Masukkan Saldo">
                </div>
                <div class="d-flex mt-3 flex-row-reverse">
                    <button type="submit" class="btn btn-primary">Tambah</button>
                </div>
            </form>
        </div>
    </div>

    <!-- scripts -->
    <%- include('../partials/scripts'); %>
        <!-- scripts partial for bootstrap styling -->

</body>

</html>